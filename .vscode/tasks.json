{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "libdragon build",
            "type": "shell",
            "command": "cd ${workspaceFolder}; libdragon make",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cen64 run",
            "type": "shell",
            "command": "${workspaceFolder}/tools/cen64/cen64-windows-x86_64.exe ${workspaceFolder}/tools/cen64/pifdata.bin ${workspaceFolder}/game.z64",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }  
        ,
        {
            "label": "Project64 run",
            "type": "shell",
            "command": "${workspaceFolder}/tools/Project64/Project64.exe ${workspaceFolder}/game.z64",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }               
    ]
}